# ---------- deps & build ----------
FROM node:20-alpine AS build
WORKDIR /app
RUN apk add --no-cache python3 make g++ && corepack enable

# install deps (no lockfile in repo)
COPY apps/web/package.json ./apps/web/
WORKDIR /app/apps/web
RUN npm install --no-fund --no-audit

# copy source separately for better layer caching
COPY apps/web/ .

# ensure public exists even if empty in repo
RUN mkdir -p public

# build Next (standalone output is set in next.config.mjs)
ENV NEXT_TELEMETRY_DISABLED=1
RUN npm run build

# ---------- runtime ----------
FROM node:20-alpine AS runtime
ENV NODE_ENV=production
ENV PORT=3000
ENV HOSTNAME=0.0.0.0
WORKDIR /app

# copy standalone server bundle
COPY --from=build /app/apps/web/.next/standalone ./
# static assets & public
COPY --from=build /app/apps/web/.next/static ./.next/static
COPY --from=build /app/apps/web/public ./public

EXPOSE 3000
CMD ["node", "server.js"]
